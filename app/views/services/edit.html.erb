<% if current_user.admin.present? %>
    <div class="container">
        <div class="box">
            <div class="form">
                <%= form_with(model: @service) do |f|%>
                    <div class="field">
                        <%= f.label :employee,'Asignar Empleado', class: 'label' %>
                        <%= f.collection_select(:employee_id, Employee.all, :id, :id, :prompt => 'Seleccionar...') %>
                        </div>
                        <div class="actions">
                            <%= f.submit "Asignar", id:"formbutton", class: 'button is-primary' %>
                        </div>
                <% end %>
            </div>
        </div>
        <%= link_to "Atras", :back %>
    </div
<% end %>