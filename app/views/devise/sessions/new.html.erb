<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  



  <div class="container">
  <div class="box">
      <div class="form">
          <h1 class="tittle">Inicia Sesión</h1></br>
      
          <div class="field">
            <%= f.label :email, class:"label" %>    
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"input" %>
          </div>

          <div class="field">
            <%= f.label "Contraseña", class:"label" %>
            <%= f.password_field :password, autocomplete: "current-password", placeholder:"Email", class:"input" %>
          </div>
          
          <% if devise_mapping.rememberable? %>
          <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label "Recuerdame" %>
          </div>
          <% end %>
          
          <div class="field is-grouped">
            <div class="actions">
              <%= f.submit "Iniciar sesión", id:"formbutton", class:"button is-primary" %>
            </div>
          </div>

          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>



<% end %>




