<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="container">
    <div class="box">
      <h1 class="tittle">Edita tus datos</h1></br> 
      <div id="formcolums">
        <div class="column">
          <div class="form">
            <div class="field">
              <%= f.label :email, class:"label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"input" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field">
              <%= f.label "Contraseña" , class:"label" %> <i>(Déjelo en blanco si no quiere cambiarlo)</i><br />
              <%= f.password_field :password, autocomplete: "new-password", placeholder:"Contraseña", class:"input" %>
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> Caracteres mínimos</em>
              <% end %>
            </div>

            <div class="field">
              <%= f.label "Confirma tu contraseña", class:"label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Contraseña", class:"input" %>
            </div>

            <div class="field">
              <%= f.label "Contraseña actual", class:"label" %> <i>(Necesitamos su contraseña actual para confirmar sus cambios)</i><br />
              <%= f.password_field :current_password, autocomplete: "current-password", placeholder:"Contraseña", class:"input" %>
            </div>

            <div class="actions">
              <%= f.submit "Editar", id:"formbutton", class:"button is-primary" %>
            </div>
          </div>
        </div>




        <div class="column">
          <div class="form">

            <div class="field">
              <%= f.label 'Teléfono', class:"label" %>
              <%= f.text_field :phone, autocomplete: "phone", placeholder:"Phone", class:"input" %>
            </div>

            <div class="field">
              <%= f.label 'Dirección', class:"label" %>
              <%= f.text_area :address, placeholder:"Dirección", class:"input" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>

