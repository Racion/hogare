<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="container">
    <div class="box">
      <h1 class="tittle">Registrate en Hogaré</h1></br>
      <div id="formcolums">
        <div class="column">
          <div class="form">
          
          <div class="field">
            <%= f.label 'DNI', class:"label" %>
            <%= f.text_field :dni, autocomplete: "dni", placeholder:"DNI", class:"input" %>
          </div>
          
          <div class="field">
              <%= f.label "Apellido", class:"label" %>
              <%= f.text_field :last_name, autocomplete: "last_name", placeholder:"Apellido", class:"input" %>
            </div>
           
            <div class="field">
              <%= f.label "Confirma tu contraseña", class:"label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Contraseña", class:"input" %>
            </div></br>
            
          </div>
        </div>

        <div class="column">
          <div class="form">

          <div class="field">
            <%= f.label "Email", class:"label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"input" %>
          </div>

            <div class="field">
              <%= f.label "Nombre", class:"label" %>
              <%= f.text_field :first_name, autocomplete: "first_name", placeholder:"Nombre", class:"input" %>
            </div>

            <div class="field">
              <%= f.label "Contraseña", class:"label" %>
              <%= f.password_field :password, autocomplete: "new-password", placeholder:"Contraseña", class:"input" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caracteres minimos)</em>
              <% end %>
            </div>

            <div class="field">
              <%= f.label 'Teléfono', class:"label" %>
              <%= f.text_field :phone, autocomplete: "phone", placeholder:"Phone", class:"input" %>
            </div>
            
          </div>
        </div>
      </div>

      <div class="field is-grouped">
        <div class="actions">
          <%= f.submit "Registro", id:"formbutton", class:"button is-primary" %><br>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>

<% end %>



