<div class="container">
    <div class="box">
        <div class="profile">
            <article class="panel is-info">
                <p class="panel-heading">
                    Mi Perfil
                </p>
                <%= link_to 'Ordenes', addresses_path, class:"panel-block is-active" %>
                <%= link_to 'Servicios ', services_path, class:"panel-block is-active" %>
            </article>

            <div class="tile is-parent">
                <article id="profile" class="tile is-child notification is-info ">
                    <div class="content">
                        <div class="tittle">
                            Administrador
                        </div></br>
                        <div class="subtitle">
                            <%= current_user.first_name %>, <%= current_user.last_name %>
                        </div>
                        <div class="content">
                            <%= current_user.email %>
                        </div>
                    </div>
                </article>
            </div>


        </div>

    </div>
</div> 