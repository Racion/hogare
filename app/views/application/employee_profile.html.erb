<% if current_user.employee.present? %>
    <div class="container">
        <div class="box">
            <div class="profile">
                <article class="panel is-warning">
                    <p class="panel-heading">
                        Mi Perfil
                    </p>
                    <%= link_to 'Servicios asignados', services_path, class:"panel-block is-active" %>
                </article>

                <div class="tile is-parent">
                    <article id="profile" class="tile is-child notification is-warning ">
                        <div class="content">
                            <div class="tittle">
                                Empleado
                            </div></br>
                            <div class="subtitle">
                                <%= current_user.first_name %>, <%= current_user.last_name %>
                            </div>
                            <div class="content">
                                <%= current_user.email %>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </div> 

<% else %>
    <div>
    no disponible
    </div>
<% end %>