<div class="container">
  <div class="box">
    <div class="container">
      <h1 class="tittle">Tus ordenes</h1></br>
      <div class="container">
        <table class="table is-striped">
          <thead>
            <tr>
              <th>Status</th>
              <th>Valor Total</th>
              <th>Fecha de Creacci√≥n</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order|%>
              <tr>
                <td><%= order.order_status%></td>
                <td><%= order.order_total_value%></td>
                <td><%= order.created_at.strftime("%F")%></td>
